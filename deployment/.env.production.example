# ScholarAI Production Environment Configuration
# ==========================================
# IMPORTANT: Copy this file to .env.production and fill in your values
# NEVER commit .env.production to version control!

# Application
# -------------
NODE_ENV=production
FLASK_ENV=production
FLASK_DEBUG=0

# Server Configuration
# --------------------
FRONTEND_HOST=localhost
FRONTEND_PORT=5173
BACKEND_HOST=0.0.0.0
BACKEND_PORT=5000

# MongoDB Atlas Configuration
# ----------------------------
# Get connection string from: https://www.mongodb.com/cloud/atlas
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/?appName=ScholarAI&retryWrites=true&w=majority
DATABASE_NAME=scholarai_prod

# JWT Configuration
# -----------------
# Generate strong secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=<generate-strong-secret-key>
JWT_ACCESS_TOKEN_EXPIRES=3600

# ZhipuAI Configuration
# -----------------------
# Get API key from: https://open.bigmodel.cn/usercenter/apikeys
ZHIPU_API_KEY=<your-zhipu-api-key>

# Optional: Custom API endpoint
# ZHIPU_API_BASE=https://open.bigmodel.cn/api/paas/v4/

# CORS Configuration
# ------------------
# Comma-separated list of allowed origins in production
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging
# -------
LOG_LEVEL=INFO
LOG_FILE=/var/log/scholarai/app.log

# Rate Limiting (optional)
# -------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Session Configuration
# ---------------------
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=Lax
SESSION_COOKIE_HTTPONLY=true
